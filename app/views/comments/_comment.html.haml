= div_for comment do
  = image_tag gravatar_url(comment, 74), alt: "#{comment.name} Avatar", class: "avatar"
  .main
    = render "comments/comment_headline", :comment => comment
    .comment_content
      = format_comment(comment)
      .actions
        = link_to raw('<i class="icon-share-alt"></i> Reply'), new_polymorphic_path([@commentable, Comment.new], :parent_id => comment), class: "btn btn-default btn-xs", remote: true
  .clear