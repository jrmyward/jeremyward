- content_for :title,  "#{@post.title.titleize}"
- content_for :description, @post.description
- content_for :og_url, request.original_url
- content_for :og_image, "#{image_url @post.image}" if @post.image?
- content_for :meta_author, @post.author.full_name
- content_for :meta_twitter_creator, @post.author.twitter_handle

= render :partial => "shared/page_title", locals: { :title => "#{@post.title.titleize}" }

%section.slice
  .w-section.inverse.blog-grid
    .container
      .row
        .col-md-8
          .row
            .col-md-12
              .w-box.blog-post
                .figure
                  %ul.meta-list
                    %li
                      %span Written by
                      = link_to_author(@post.author)
                    %li
                      %span -
                      = @post.published_at.strftime("%B %d, %Y")
                  %ul.meta-list
                    %li
                      %i.fa.fa-tags
                    %li
                      - if @post.tag_list.count > 0
                        = link_to_tags_inline(@post.tag_list_sorted)
                  - if @post.image?
                    = image_tag @post.image, class: "", alt: "#{@post.title.titleize}"
                  = markdown_render(@post.body)
          - if @post.commentable?
            .row
              .col-md-12
                .w-box.blog-post
                  .comments-wr
                    %h3.section-title Comments
                    = nested_comments @post.comments.published.arrange(:order => "created_at asc")
                .w-box.w-box-inverse.inner
                  .comment-form
                    %h3.section-title Add you comment
                    #comment_form_prime
                      = render "comments/form"
