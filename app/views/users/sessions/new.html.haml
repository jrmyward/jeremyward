- content_for :title,  "Sign In"
= render "shared/page_title", title: "Sign In"

%section.slice
  .w-section
    .container
      .row
        .col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
          .w-section
            .w-box.sign-in-wr.bg-5
              .form-header
                %h2 Please, sign in to your account
              .form-body
                = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-light padding-15", role: "form" }) do |f|
                  = f.input :email
                  = f.input :password
                  .row
                    .col-md-6
                      = f.label :remember_me, class: "checkbox" do
                        = f.check_box :remember_me
                        Remember me
                    .col-md-6
                      = f.submit "Sign in", class: "btn btn-two pull-right", id: "submit_user_signin"
              .form-footer
                %p
                  = link_to "Recover password &raquo;".html_safe, new_password_path(resource_name)
